{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}

    {{ form_start(form) }}
        {{ form_row(form.name, { 'label': 'Prénom' }) }}
        {{ form_row(form.surname, { 'label': 'Nom' }) }}
        {{ form_row(form.email) }}
        {{ form_row(form.phone, { 'label': 'Téléphone' }) }}
        {{ form_row(form.quality, { 'label': 'Qualité' }) }}
        {{ form_row(form.description, { 'label': 'Description' }) }}
        {% if contact.logo is not empty %}
            <p>Votre logo existe déja : </p>
            <img class="logo" src="{{ asset('uploads/logo/' ~ contact.logo) | imagine_filter('squared_avatar')}}" alt="image_logo"/>
        {% endif %}
        {{ form_row(form.logo) }}    

        {% if action == true %}
            <input type="submit" value="Ajout contact"/>
        {% else %}
            <input type="submit" value="Modifier contact"/>
        {% endif %}
    {{ form_end(form) }}

{% endblock %}

