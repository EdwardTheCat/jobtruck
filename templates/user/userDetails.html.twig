{% extends 'adminTemplate.html.twig' %}

{% block body %}

    <h4>Details utilisateur:</h4>
    <div class="details">
        <p><img class="avatar" src="{{ asset('/uploads/avatar/' ~ user.avatar)  | imagine_filter('thumb')}}" alt="image_user"/></p>
        <p>Pseudo: {{user.username}}</p>
        <p>Email: {{user.email}}</p>
        <p>Roles:
        {% for role in user.roles %}
            {{role}}
        {% endfor %}
        <p>Date de création: {{user.createdAt|date('Y-m-d:h:s')}}</p>
        {% if user.dateLastLogin %}}
            <p>Date dernière visite: {{user.dateLastLogin|date('Y-m-d:h:s')}}</p>
        {% endif %}
    </div>
{% endblock %}
