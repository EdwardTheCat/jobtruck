{% extends 'adminTemplate.html.twig' %}

{% block body %}


    
    {% for one in all %} 
     
        <p>Titre: {{ one.title }}</p>
        <p>Description:{{ one.description }}</p>
        <p>Contacte:{{ one.contact }}</p>
        <p>Logo:{{ one.logo }}</p>
        <p>Validité:{{ one.validity}}</p>
        <p>Crée le :{{ one.createdAT|date("m/d/Y") }}</p>      

     
    {% endfor %}    
    <a  class="btn btn-outline-primary bigButton" href="{{ path('createJob') }}">Ajouter une offre d'emploi</a>

    <a id="dashboard" class="btn btn-outline-secondary" href="{{path('admin')}}" role="button">Dashboard</a>

{% endblock %}